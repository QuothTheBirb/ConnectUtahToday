{
  "name": "ConnectUtahToday",
  "version": "1.0.0",
  "main": "server.js",
  "type": "module",
  "repository": "git@github.com:madssee/ConnectUtahToday.git",
  "author": "<madssee>",
  "license": "MIT",
  "workspaces": [
    "api/",
    "website/",
    "r2-worker/"
  ],
  "scripts": {
    "build": "npm run build:website",
    "build:website": "cd website && npm run build",
    "start": "concurrently \"npm run start:api\" \"npm run start:website\"",
    "start:api": "cd api && npm run start",
    "start:website": "cd website && npm run start",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:website\"",
    "dev:api": "cd api && npm run dev",
    "dev:website": "cd website && npm run dev"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "typescript": "^5.9.2"
  },
  "packageManager": "npm@11.1.0"
}
