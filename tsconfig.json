{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "skipLibCheck": true,
    "esModuleInterop": false,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "./src/**/*.css",
    "./src/**/*.scss",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}
