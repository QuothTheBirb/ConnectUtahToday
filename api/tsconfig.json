{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "target": "esnext",
    "baseUrl": ".",
    "outDir": "dist",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "isolatedModules": true,
  },
  "include": [
    "index.ts",
    "**/*.ts",
  ]
}
